{
  "compilerOptions": {
    // Don't emit files during type-checking builds; this allows "allowImportingTsExtensions"
    "noEmit": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
  "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
