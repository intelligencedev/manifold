{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
     },
    "types": [
      "@vue-flow/core",
       "@vue-flow/additional-components",
       "@vue-flow/node-resizer"
     ],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "src/components/icons/solar-arrow-to-top-left-bold.vue", "src/components/icons/solar-command-linear.vue"]
}